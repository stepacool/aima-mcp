  // 1. Hooks
  const router = useRouter();
  const { data } = trpc.example.useQuery();

  // 2. Derived state
  const isValid = Boolean(required);

  // 3. Event handlers
  const handleClick = () => { /* ... */ };

  // 4. Early returns
  if (!data) return <Skeleton />;

  // 5. Render
  return (
